<?xml version="1.0" encoding="utf-8"?>
<xsl:stylesheet version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
    <xsl:template match="/rss">
        <html>
            <head>
                <title><xsl:value-of select="channel/title" /></title>
                <% include head-partial.ejs %>
            </head>
            <body class="feed">
                <div class="container">
                    <h1>
                        <xsl:element name="a">
                            <xsl:attribute name="href">
                                <xsl:value-of select="channel/link" />
                            </xsl:attribute>
                            <xsl:value-of select="channel/title" />
                        </xsl:element>
                    </h1>
                    <div class="this-is-a-feed-alert alert alert-block alert-info">
                        This is an RSS feed. Check <a href="/">home</a> page for details on how to use it.
                    </div>
                    <div class="items">
                        <xsl:for-each select="channel/item">
                            <div>
                                <xsl:element name="a">
                                    <xsl:attribute name="title">Permanent link</xsl:attribute>
                                    <xsl:attribute name="href"><xsl:value-of select="guid"/></xsl:attribute>
                                    <xsl:attribute name="target">_blank</xsl:attribute>
                                    <xsl:value-of select="title"/>
                                </xsl:element>
                            </div>
                        </xsl:for-each>
                    </div>
                </div>
                <script>
                    if (window.top) {
                        var alert = document.querySelector('.this-is-a-feed-alert')
                        alert.style.display = 'none'
                    }
                </script>
            </body>
        </html>
    </xsl:template>
</xsl:stylesheet>
